            span.catalog__filter-switch
            | КОНТРАКТНЫЕ
        li
          label.catalog__filter
            input.catalog__filter-input(type="checkbox" data-category="exclusive")
            span.catalog__filter-switch
            | ЭКСКЛЮЗИВНЫЕ
        li
          label.catalog__filter
            input.catalog__filter-input(type="checkbox" data-category="sale")
